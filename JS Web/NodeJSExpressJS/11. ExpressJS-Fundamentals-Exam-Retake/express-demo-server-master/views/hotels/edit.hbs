<div class="login-page">
  <div class="form">
    <form action="/edit" method="POST" class="create-form">
      <input type="text" name='title' placeholder="Title" value ="{{hotel.title}}"/>
      <input type="text" name='location' placeholder="Location" value ="{{hotel.location}}"/>
      <input type="text" name='image' placeholder="Image Url" value ="{{hotel.imageUrl}}"/>

      <select class='picker' name="type">
      <option value="Fancy">Fancy</option>
      <option value="Not Fancy">Not Fancy</option>
      </select>
      <br>
      <br>
      <textarea name="description" id="" cols="35" rows="10" placeholder="description">{{hotel.description}}</textarea>
      <br>
      <input type="hidden" name="id" value="{{hotel.id}}">
      <button type="submit">edit</button>
    </form>
  </div>
</div>